<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_folder"
        android:layout_width="97dp"
        android:layout_height="143dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/ic_folder_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/empty_view_tv_message"
        style="@style/textStyle.Medium"
        android:layout_below="@+id/image_folder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/str_no_data"
        android:gravity="center_horizontal"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/empty_view_tv_refresh"
        style="@style/textStyle.Medium.Bold"
        android:layout_below="@+id/empty_view_tv_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/str_tap_to_refresh"/>

</RelativeLayout>