<resources>

    <!-- Base application theme. -->

    <!-- declare the theme name that's actually applied in the manifest file -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <!-- base set of styles that apply to all versions -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!--   a darker variant of the primary color, used for the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--Style for Progress Dialog-->
    <style name="AppTheme.ProgressDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowIsFloating">false</item>
    </style>


    <!--Style for Splash Screen-->
    <style name="SplashTheme" parent="AppTheme">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name ="android:windowBackground"> @drawable/splash_screen_background</item>
    </style>

    <style name="toolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="textStyle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyle.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="textStyle.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyle.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="textStyle.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen_30</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
